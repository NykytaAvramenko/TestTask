<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="@dimen/recycler_square_image_side_80dp"
        android:layout_height="@dimen/recycler_square_image_side_80dp"

        android:scaleType="centerCrop"

        android:layout_marginLeft="@dimen/recycler_elements_margin_20dp"
        android:layout_marginRight="@dimen/recycler_elements_margin_20dp"
        android:layout_marginBottom="@dimen/recycler_elements_margin_20dp"
        android:background="@color/recycler_items_color">


    </ImageView>

    <TextView
        android:textSize="@dimen/recycler_item_text_size_15sp"
        android:id="@+id/textViewDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/recycler_elements_margin_20dp"
        android:layout_marginBottom="@dimen/recycler_elements_margin_20dp"
        android:layout_weight="1"
        android:background="@color/recycler_items_color"
        android:minHeight="@dimen/recycler_square_image_side_80dp"
        android:text=""
        android:textColor="@android:color/black" />

</LinearLayout>


