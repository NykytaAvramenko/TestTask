<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/recycler_background"
    tools:context=".ActivityThreeRecycler">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="@dimen/recycler_elements_margin_20dp"
        android:scrollbars="vertical" />


    <com.example.testtask.ux.MovableFloatingActionButton

        android:id="@+id/floating_action_button"
        android:layout_width="@dimen/recycler_square_image_side_80dp"
        android:layout_height="@dimen/recycler_square_image_side_80dp"
        android:layout_margin="@dimen/recycler_elements_margin_20dp"

        android:tint="@color/white"
        app:backgroundTint="@color/floating_button"
        app:fabCustomSize="@dimen/recycler_square_image_side_80dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_white_plus"
        app:tint="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>